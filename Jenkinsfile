//Jenkins basic syntax

pipeline{
    agent any
        stages{
            stage("build"){
                steps{
                    //scripts to be inserted here
                    echo "building the application"
                }
            }
            stage("test"){
                steps{
                    //scripts to be inserted here
                    echo "testing the application"
                }
            }
            stage("deploy"){
                steps{
                    //scripts to be inserted here
                    echo "deploying the application"             
                }
            }
         }
    }
}
